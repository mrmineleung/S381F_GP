<html>
	<head><!-- CSS (load bootstrap from a CDN) -->
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
    body    { padding-top:50px; }
</style>
<title>Update Restaurant</title></head>
   <body>
   	<div class="container">
      <H1>Hello, <%= name %></H1>
      <h2>Update Restaurant</h2>
      
      <form id='details' method='POST' action='/update' enctype="multipart/form-data">
		<div class="panel panel-success">
      <div class="panel-heading">Basic Info</div>
      <div class="panel-body">
          Restaurant ID: <input type="text" class="form-control" name="restaurantid" value="<%= result[0].restaurantid %>"><br>
          Name: <input type="text" class="form-control" name="name" value="<%= result[0].name %>"><br>
	Borough: <input type="text" class="form-control" name="borough" value="<%= result[0].borough %>"><br>
	Cuisine: <input type="text" class="form-control" name="cuisine" value="<%= result[0].cuisine %>"><br>
	<% if (result[0].photo != '') { %>
         Original Photo: <img src="data:<%=result[0].photo_mimetype%>;base64, <%=result[0].photo%>"><br>
         Original Photo mimetype: <%= result[0].photo_mimetype %><br>
         <input type="hidden" name="photo" value="<%= result[0].photo %>"><br>
         <input type="hidden" name="photo_mimetype" value="<%= result[0].photo_mimetype %>"><br>
      <% } %> 
	Upload New Photo: <input type="file" name="filetoupload" ><br></div>
    </div>
	
	<div class="panel panel-success">
      <div class="panel-heading">Address</div>
      <div class="panel-body">	<!-- Address -->
	Building: <input type="text" class="form-control" name="building" value="<%= result[0].address.building %>"><br>
	Street: <input type="text" class="form-control" name="street" value="<%= result[0].address.street %>"><br>
	Zipcode: <input type="text" class="form-control" name="zipcode" value="<%= result[0].address.zipcode %>"><br></div>
    </div>
<div class="panel panel-success">
      <div class="panel-heading">Coord</div>
      <div class="panel-body"><!-- Coord -->Lat: <input type="text" class="form-control" name="lat" value="<%= lat %>"> Lng: <input type="text" class="form-control" name="lng" value="<%= lng %>"><br></div>
    </div>
	<input type="hidden" name="id" value="<%= id %>">
	</form>
	<script>
	function goBack() {window.history.back();}
	</script>
	<button type="submit" form="details" class="btn btn-default" value="Update">Update</button>
	<button onclick="goBack()" class="btn btn-default">Go Back</button>
      </div>
   </body>
</html>